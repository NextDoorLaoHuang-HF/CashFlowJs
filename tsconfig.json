{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "allowJs": false,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true,
    "types": ["vitest", "node"]
  },
  "include": ["src", "tests", "vite.config.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
