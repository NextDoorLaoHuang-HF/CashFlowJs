{
  "name": "cashflow-js",
  "version": "1.0.0",
  "description": "Modernized CashFlow JS rewrite with Vite + TypeScript",
  "type": "module",
  "scripts": {
    "sync:legacy": "node ./scripts/sync-legacy-assets.mjs",
    "predev": "npm run sync:legacy",
    "dev": "vite",
    "prebuild": "npm run sync:legacy",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "smoke:legacy": "vitest run tests/legacy-smoke.test.ts"
  },
  "keywords": [
    "cashflow",
    "board-game",
    "vite",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "mitt": "^3.0.1",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.0",
    "@testing-library/dom": "^10.4.1",
    "@types/jsdom": "^21.1.5",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "@vitest/coverage-v8": "^1.5.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jsdom": "^24.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vitest": "^1.5.2"
  }
}
